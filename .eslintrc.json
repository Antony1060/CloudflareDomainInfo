{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "extends": [
        "plugin:lvksh/recommended"
    ],
    "ignorePatterns": [
        "!**/*"
    ],
    "plugins": [
        "lvksh"
    ],
    "env": {
        "node": true
    },
    "rules": {
        "quotes": ["error", "double"],
        "unicorn/prevent-abbreviations": "off",
        "unicorn/no-nested-ternary": "off",
        "unicorn/no-object-as-default-parameter": "off"
    }
}